{
  "name": "social_gauge_backend",
  "version": "1.0.0",
  "description": "API for social gauge",
  "author": "Ruturaj Bayad & Soham Mandaliya",
  "copyFiles": [
    {
      "from": "../social_gauge.admin/dist/**/*",
      "to": "dist/social_gauge.api/src/public/"
    }
  ],
  "scripts": {
    "start": "npm run build && nodemon dist/server.js",
    "restart": "pm2 stop social_gaugeApi && npm run start",
    "start-docker": "pm2-runtime dist/social_gauge.api/src/server.js --name social_gaugeApi  && pm2-runtime logs",
    "restart-prod": "pm2 stop social_gaugeApi && npm run start-prod",
    "restart-dev": "pm2 stop social_gaugeApi && npm run start-dev",
    "watch": "npm run tslint && npm run watch-ts",
    "build": "npm run tslint && npm run build-ts",
    "build-ts": "tsc && npm run copyEnv",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copyEnv": "copyfiles ./src/environments/.*.env dist/environments --flat"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "body-parser": "^1.20.3",
    "copy-files-from-to": "^3.12.0",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "eventsource": "^3.0.2",
    "express": "^4.21.2",
    "fs": "^0.0.1-security",
    "http-status": "^2.0.0",
    "node-fetch": "^3.3.2",
    "path": "^0.12.7",
    "reflect-metadata": "^0.2.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.3",
    "nodemon": "^1.19.4",
    "tslint": "^5.20.1",
    "typescript": "^4.8.4"
  }
}
